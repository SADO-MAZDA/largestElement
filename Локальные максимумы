using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp17
{
    class Program
    {
        static void Main(string[] args)
        {
            int maxRandomNumber = 10;
            int minRandomNumber = 0;
            int arrayLenght = 10;
            int extremeElement = arrayLenght - 1;
            int oneElement = 0;
            int secondElement = 1;
            int[] arrayWithLocalMaximum = new int[arrayLenght];
            Random random = new Random();

            for (int i = 0; i < arrayLenght; i++)
            {
                arrayWithLocalMaximum[i] = random.Next(minRandomNumber, maxRandomNumber);
                Console.Write(arrayWithLocalMaximum[i] + " ");
            }

            Console.WriteLine();

            if (arrayWithLocalMaximum[oneElement] > arrayWithLocalMaximum[secondElement])
            {
                Console.Write(arrayWithLocalMaximum[0] + " ");
                
            }

            for (int i = 1; i < extremeElement ; i++)
            {
                if (arrayWithLocalMaximum[i] > arrayWithLocalMaximum [i-1] && arrayWithLocalMaximum[i] > arrayWithLocalMaximum[i+1])
                {
                    Console.Write(arrayWithLocalMaximum[i] + " ");
                }
            }

            if (arrayWithLocalMaximum[extremeElement] > arrayWithLocalMaximum[extremeElement-1])
            {
                Console.Write(arrayWithLocalMaximum[extremeElement] + " ");
            }
        }
    }
}
